{{#switch field.type}}
  {{#case 'id' 'uuid'}}
    {{>entity__field__primary_db_decorator}}
    {{>entity__field__primary_gql_decorator}}
  {{/case}}
  {{#case 'int' 'float' 'string' 'date' 'boolean'}}
    {{>entity__field__scalar_db_decorator}}
    {{>entity__field__scalar_gql_decorator}}
  {{/case}}
  {{#case 'set' 'enum'}}
    {{>entity__field__set_db_decorator}}
    {{>entity__field__set_gql_decorator}}
  {{/case}}
  {{#case 'created' 'updated' 'version'}}
    {{>entity__field__special_db_decorator}}
    {{>entity__field__special_gql_decorator}}
  {{/case}}
  {{#case 'one-to-one' 'one-to-many' 'many-to-one' 'many-to-many'}}
    {{>entity__field__relation_db_decorator}}
    {{>entity__field__relation_gql_decorator}}
  {{/case}}
{{/switch}}
{{field.name}}: {{call field 'tsType'}}
